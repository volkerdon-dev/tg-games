{
  "version": 2,
  "builds": [
    { "src": "api/**/*.cjs", "use": "@vercel/node" },
    { "src": "web/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^/$", "dest": "web/index.html" },
    { "src": "^/games/tictactoe/?$", "dest": "web/games/tictactoe/index.html" },
    { "src": "^/admin/?$", "dest": "web/admin/index.html" },
    { "src": "^(.*)$", "dest": "web$1" }
  ]
}
